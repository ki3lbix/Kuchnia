
{
  "name": "catering-backend",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "docker compose -f docker-compose.dev.yml up -d && sleep 4 && chmod +x ./ops/dev-seed.sh && ./ops/dev-seed.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker",
        "ms-python.python"
      ]
    }
  },
  "remoteUser": "vscode"
}
